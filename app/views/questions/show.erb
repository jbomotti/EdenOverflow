<div class="container">
	<h1><%= @question.title %></h1>
	<form action='/votes' method='post'>
		<input type='hidden' name='vote[votable_id]' value='<%= @question.id%>'>
		<input type='hidden' name='vote[votable_type]' value="Question">
		<input type='hidden' name='vote[count]' value="1">
		<input type='hidden' name='vote[user_id]' value='<%= session[:user_id] %>' >
		<button class="">Up</button>
	</form>
		<span><%= Vote.where(votable_id: @question.id, votable_type: "Question").sum(:count) %></span>
	<form action='/votes' method='post'>
		<input type='hidden' name='vote[votable_id]' value='<%= @question.id%>'>
		<input type='hidden' name='vote[votable_type]' value="Question">
		<input type='hidden' name='vote[count]' value="-1">
		<input type='hidden' name='vote[user_id]' value='<%= session[:user_id] %>' >
		<button class="">Down</button>
	</form>
	<p><%= @question.body %></p>
	<p><%= @author.username %></p>
	<% @question.comments.each do |comment| %>
	<p><%= comment.body %></p>
	<% end %>
	<form action='/comments' method='post'>
		<input type='hidden' name='comment[commentable_id]' value='<%= @question.id%>'>
		<input type='hidden' name='comment[commentable_type]' value="Question">
		<input type='hidden' name='comment[user_id]' value='<%= session[:user_id] %>' >
		<input type='submit' value="New Comment">
	</form>
	<hr>


	<span> <% @question.answers.each do |answer| %>
	<form action='/votes' method='post'>
		<input type='hidden' name='vote[votable_id]' value='<%= @question.id%>'>
		<input type='hidden' name='vote[votable_type]' value="Answer">
		<input type='hidden' name='vote[count]' value="1">
		<input type='hidden' name='vote[user_id]' value='<%= session[:user_id] %>' >
		<button class="">Up</button>
	</form>
		<span><%= Vote.where(votable_id: answer.id, votable_type: "Answer").sum(:count) %></span>
	<form action='/votes' method='post'>
		<input type='hidden' name='vote[votable_id]' value='<%= @question.id%>'>
		<input type='hidden' name='vote[votable_type]' value="Answer">
		<input type='hidden' name='vote[count]' value="-1">
		<input type='hidden' name='vote[user_id]' value='<%= session[:user_id] %>' >
		<button class="">Down</button>
	</form>
	<p><%= answer.body %></p>
	<p><%= User.find(answer.user_id).username %></p>
	<% answer.comments.each do |comment| %>
	<p><%= comment.body %></p>
	<% end %>
	<form action='/comments' method='post'>
		<input type='hidden' name='comment[commentable_id]' value='<%= answer.id%>'>
		<input type='hidden' name='comment[commentable_type]' value="Answer">
		<input type='hidden' name='comment[user_id]' value='<%= session[:user_id] %>' >
		<input type='submit' value="New Comment">
	</form>
	</span>
		<% end %>
</div>

